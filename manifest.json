{
  "manifest_version": 3,
  "name": "YouTube Time Manager",
  "version": "2.0.0",
  "description": "Advanced time management suite for YouTube: Remaining time, Finishes at, Playlist calc, and more.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": ["*://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "YouTube Time Manager"
  }
}
