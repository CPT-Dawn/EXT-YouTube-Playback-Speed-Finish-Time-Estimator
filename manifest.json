{
  "manifest_version": 3,
  "name": "TurboWatch for YouTube",
  "version": "2.0.0",
  "description": "Track video time, control playback speed, and know exactly when you'll finish. Beautiful flip clock, chapter tracking, smart playlist management. Your YouTube productivity copilot.",
  "author": "CPT-Dawn",
  "homepage_url": "https://github.com/CPT-Dawn/EXT-YouTube-Playback-Speed-Finish-Time-Estimator",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["*://*.youtube.com/*"],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "overlay.html"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "TurboWatch for YouTube",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}